extends ../layout 

block main-content 
  h1 Add menu link
  form(method="post", action="/admin/menu/add/submit")
    div 
      label(for="wgt") Weight: 
      input(type="number", id="wgt", name="wgt", placeholder="e.g. 1")
    div 
      label(for="path") Path (URI):
      input(type="text", id="path", name="path", placeholder="e.g. /about")
    div 
      label(for="text") Link text: 
      input(type="text", id="text", name="text", placeholder="e.g. About")
    button(type="submit") Add link